    <input type="number" id="mise-pari" placeholder="Mise (pi√®ces)" min="1" step="1">
    <select id="duree-pari">
      <option value="60000">1 minute</option>
      <option value="3600000">1 heure</option>
      <option value="86400000">1 jour</option>
